<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".ChildInfo">


        <ImageButton
            android:id="@+id/back2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/back_btn" />


    <View
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="2pt"
        android:background="#A779CA" />

    <LinearLayout

        android:padding="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:background="@drawable/student_profile_backround"
        android:orientation="vertical">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/student_profile_img1"
                android:scaleType="fitXY"
                />
            <TextView
                android:fontFamily="@font/good"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:id="@+id/student_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="데이터 없음"
                android:textSize="30dp" />
        </LinearLayout>
        <View
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:layout_width="400dp"
            android:layout_height="1dp"
            android:background="#9148C8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="@font/imcresoojin"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="학생 번호:"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:fontFamily="@font/imcresoojin"
                android:id="@+id/student_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="데이터 없음"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:fontFamily="@font/imcresoojin"
                android:textColor="@color/black"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="학생 휴대폰:"
                android:textSize="20dp"/>
            <TextView
                android:fontFamily="@font/imcresoojin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/student_phone"
                android:gravity="center"
                android:text="데이터 없음"
                android:textSize="20dp"/>
        </LinearLayout>

        <View
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_width="390dp"
            android:layout_height="1pt"
            android:background="#A779CA" />

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/parent_student_info_teacher"
                android:scaleType="fitXY"
                />
            <TextView
                android:fontFamily="@font/good"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:id="@+id/teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="데이터 없음"
                android:textSize="30dp" />
        </LinearLayout>

        <View
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:layout_width="400dp"
            android:layout_height="1dp"
            android:background="#9148C8" />


        <LinearLayout
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:fontFamily="@font/imcresoojin"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="교사 연락처:"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:fontFamily="@font/imcresoojin"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:id="@+id/teacher_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="데이터 없음"
                android:textSize="20dp" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="2pt"
        android:background="#A779CA" />

    <Button
        android:layout_marginTop="20dp"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:id="@+id/student_attendance"
        android:text="출석 조회"
        android:backgroundTint="#9148C8"
        android:textColor="@color/white"
        android:background="@drawable/sub2_background">
    </Button>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="185dp"
        android:layout_height="140dp"
        android:src="@drawable/student_profile_img2"
        android:scaleType="fitXY"/>
    <ImageView
        android:layout_width="185dp"
        android:layout_height="140dp"
        android:src="@drawable/student_profile_img3"
        android:scaleType="fitXY"/>
    </LinearLayout>

</LinearLayout>