<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    tools:context=".personal_student">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="학생 이름 : "
            android:textSize="25dp" />

        <TextView
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/student_name"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:textSize="25dp" />


    </LinearLayout>
    <View
        android:layout_marginBottom="5dp"
        android:layout_marginTop="3dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="2pt"
        android:background="#002060" />


    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="left"
            android:textColor="#002060"
            android:id="@+id/attendace_date"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="날짜"
            android:textSize="25dp" />


        <TextView
            android:layout_marginLeft="100dp"
            android:id="@+id/attendace_record"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:text="출석 기록"
            android:textColor="#002060"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>


    <ScrollView
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/personal_student"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/check_date"
                android:layout_width="150dp"
                android:layout_height="380dp" />

            <ListView

                android:id="@+id/check_log"
                android:layout_width="150dp"
                android:layout_height="380dp" />
        </LinearLayout>
    </ScrollView>
    <ImageView
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="140dp"
        android:src="@drawable/attendancecheck_img1"
        android:scaleType="fitXY"/>
    <View
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="2pt"
        android:background="#002060" />
</LinearLayout>