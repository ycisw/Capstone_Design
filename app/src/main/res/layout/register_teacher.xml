<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".RegisterTeacher">


    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="@dimen/back_btn_size"
        android:layout_height="@dimen/back_btn_size"
        android:layout_margin="@dimen/margin_s"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/btn_back" />

    <ImageView
        android:layout_width="@dimen/rt_header_width"
        android:layout_height="@dimen/rt_header_height"
        android:layout_marginBottom="@dimen/margin_m"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:background="@drawable/register_header" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_s"
        android:layout_gravity="center"
        android:background="@drawable/btn_border_navy"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="@dimen/rt_text_width"
            android:layout_height="@dimen/rt_text_height"
            android:layout_gravity="center"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="@dimen/rt_text_width"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:hint="@string/rg_id"
                android:textColorHint="@color/text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_id"
                    android:fontFamily="@font/imcresoojin"
                    android:layout_width="@dimen/rt_text_width"
                    android:layout_height="match_parent"
                    android:inputType="textWebEditText"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/rt_text_width"
            android:layout_height="@dimen/rt_text_height"
            android:layout_gravity="center"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="@dimen/rt_text_width"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:hint="@string/rg_pass"
                app:passwordToggleEnabled="true"
                android:textColorHint="@color/text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_password"
                    android:layout_width="@dimen/rt_text_width"
                    android:fontFamily="@font/imcresoojin"
                    android:layout_height="match_parent"
                    android:inputType="textWebPassword"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/rt_text_width"
            android:layout_height="@dimen/rt_text_height"
            android:layout_gravity="center"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="@dimen/rt_text_width"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:hint="@string/rg_pass_conf"
                app:passwordToggleEnabled="true"
                android:textColorHint="@color/text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_confirm"
                    android:layout_width="@dimen/rt_text_width"
                    android:fontFamily="@font/imcresoojin"
                    android:layout_height="match_parent"
                    android:inputType="textWebPassword"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/rt_text_width"
            android:layout_height="@dimen/rt_text_height"
            android:layout_gravity="center"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="@dimen/rt_text_width"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:hint="@string/rg_name"
                android:textColorHint="@color/text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_name"
                    android:layout_width="@dimen/rt_text_width"
                    android:fontFamily="@font/imcresoojin"
                    android:layout_height="match_parent"
                    android:inputType="textWebEditText"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/rt_text_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="@dimen/rt_mini_text_width"
                android:layout_height="@dimen/rt_text_height"
                android:hint="@string/rg_phone"
                android:textColorHint="@color/text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_phone"
                    android:layout_width="@dimen/rt_mini_text_width"
                    android:fontFamily="@font/imcresoojin"
                    android:layout_height="match_parent"
                    android:inputType="phone"
                    android:backgroundTint="@color/purple" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/register_send_validation"
                android:layout_width="@dimen/rt_mini_btn_width"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_s"
                android:fontFamily="@font/good"
                android:backgroundTint="@color/purple"
                android:text="@string/rg_phone_btn"
                android:textColor="@color/white"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/rt_text_width"
            android:layout_height="@dimen/rt_text_height"
            android:layout_gravity="center"
            android:theme="@style/EditText"
            >

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="@dimen/rt_mini_text_width"
                android:layout_height="@dimen/rt_text_height"
                android:hint="@string/rg_conf"
                android:textColorHint="@color/text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_validation_code"
                    android:layout_width="@dimen/rt_mini_text_width"
                    android:fontFamily="@font/imcresoojin"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/purple"
                    android:inputType="number"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/register_validation"
                android:layout_width="@dimen/rt_mini_btn_width"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_s"
                android:fontFamily="@font/good"
                android:backgroundTint="@color/purple"
                android:text="@string/rg_conf_btn"
                android:textColor="@color/white"
               />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <Button
                android:id="@+id/register_register_button"
                android:layout_width="@dimen/rt_btn_width"
                android:layout_height="@dimen/rt_btn_height"
                android:layout_marginTop="@dimen/margin_m"
                android:layout_marginBottom="@dimen/margin_s"
                android:textSize="@dimen/text_size_b"
                android:layout_gravity="center"
                android:background="@drawable/btn_effect_navy"
                android:backgroundTint="@color/navy"
                android:fontFamily="@font/good"
                android:text="@string/reg"
                android:textColor="@color/white"
                />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_b"
        android:gravity="bottom">

        <ImageView
            android:layout_width="@dimen/rt_img_l_width"
            android:layout_height="@dimen/rt_img_l_height"
            android:scaleType="fitXY"
            android:background="@drawable/register_img1" />

        <ImageView
            android:layout_width="@dimen/rt_img_r_width"
            android:layout_height="@dimen/rt_img_r_height"
            android:scaleType="fitXY"
            android:background="@drawable/register_img2" />

    </LinearLayout>

</LinearLayout>