<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".RegisterTeacher">


    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="@dimen/back_btn_size"
        android:layout_height="@dimen/back_btn_size"
        android:layout_margin="@dimen/margin_s"
        android:layout_gravity="left"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/btn_back" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
       >

        <ImageView
            android:layout_width="@dimen/as_header_width"
            android:layout_height="@dimen/as_header_height"
            android:layout_marginRight="@dimen/margin_s"
            android:layout_marginTop="@dimen/margin_s"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:src="@drawable/at_check_stu_header" />


        <View
            android:layout_width="@dimen/view_width_s"
            android:layout_height="@dimen/view_height"
            android:layout_marginTop="@dimen/margin_s"
            android:layout_marginBottom="@dimen/margin_s"
            android:layout_gravity="center"
            android:background="#002060" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_s"
        android:orientation="vertical"
        android:background="@drawable/btn_border_navy"
        android:layout_gravity="center"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/attendance_check_recyclerview"
            android:layout_width="@dimen/as_list_width"
            android:layout_height="@dimen/as_list_height"
            android:layout_gravity="center"
            android:scrollbars="vertical" />
    </LinearLayout>

    <View
        android:layout_gravity="center"
        android:layout_width="@dimen/view_width_s"
        android:layout_height="@dimen/view_height"
        android:layout_marginTop="@dimen/margin_s"
        android:background="#002060" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_b"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="@dimen/as_btn_width"
            android:layout_height="@dimen/as_header_height"
            android:layout_margin="@dimen/margin_s"
            android:textSize="20dp"
            android:fontFamily="@font/imcresoojin"
            android:background="@drawable/at_in_btn"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/checkBT"
            android:text="등 원"/>

        <Button
            android:layout_width="@dimen/as_btn_width"
            android:layout_height="@dimen/as_btn_height"
            android:layout_margin="@dimen/margin_s"
            android:textSize="20dp"
            android:fontFamily="@font/imcresoojin"
            android:background="@drawable/at_out_btn"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/goToTheHome"
            android:text="하 원"/>

    </LinearLayout>



</LinearLayout>