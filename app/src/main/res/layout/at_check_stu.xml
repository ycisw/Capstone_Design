<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".RegisterTeacher">


    <ImageButton
        android:layout_gravity="left"
        android:id="@+id/back_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/btn_back" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
       >

        <ImageView
            android:scaleType="fitXY"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:src="@drawable/at_check_stu_header" />


        <View
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="2pt"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#002060" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp"
        android:background="@drawable/btn_border_navy"
        android:layout_gravity="center"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/attendance_check_recyclerview"
            android:layout_width="280dp"
            android:layout_height="340dp"
            android:layout_gravity="center"
            android:scrollbars="vertical" />
    </LinearLayout>

    <View
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="2pt"
        android:layout_marginTop="5dp"
        android:background="#002060" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:fontFamily="@font/imcresoojin"
            android:background="@drawable/at_in_btn"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/checkBT"
            android:text="등 원"/>

        <Button
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:fontFamily="@font/imcresoojin"
            android:background="@drawable/at_out_btn"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/goToTheHome"
            android:text="하 원"/>

    </LinearLayout>



</LinearLayout>