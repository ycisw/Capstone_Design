<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ChildAt">

    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="@dimen/back_btn_size"
        android:layout_height="@dimen/back_btn_size"
        android:layout_margin="@dimen/margin_s"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/btn_back" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_s"
        android:layout_gravity="center"
        android:orientation="horizontal">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_l"
            android:fontFamily="@font/good"
            android:text="@string/stu_name"
            android:textAlignment="center"
            android:textColor="@color/purple"
            android:id="@+id/student_name"
            />



    </LinearLayout>
    <View
        android:layout_width="@dimen/view_width_s"
        android:layout_height="@dimen/view_height"
        android:layout_marginBottom="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:layout_gravity="center"
        android:background="@color/purple" />




   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:padding="@dimen/padding_s"
       android:orientation="vertical"
       android:background="@drawable/btn_border_purple"
       android:layout_gravity="center">

       <ScrollView
           android:layout_width="@dimen/ca_list_width"
           android:layout_height="@dimen/ca_list_height"
           android:layout_marginTop="@dimen/margin_s"
           android:layout_gravity="center"
          >

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <ListView
                   android:id="@+id/attendacne_data"
                   android:layout_width="@dimen/ca_list_width"
                   android:layout_height="@dimen/ca_list_height" />

           </LinearLayout>
       </ScrollView>
   </LinearLayout>
    <View
        android:layout_width="@dimen/view_width_s"
        android:layout_height="@dimen/view_height"
        android:layout_marginBottom="@dimen/margin_s"
        android:layout_marginTop="@dimen/margin"
        android:layout_gravity="center"
        android:background="@color/purple" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/ca_img1_width"
            android:layout_height="@dimen/ca_img1_height"
            android:src="@drawable/student_img_down1"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="@dimen/ca_img2_width"
            android:layout_height="@dimen/ca_img2_height"
            android:src="@drawable/student_img_down2"
            android:scaleType="fitXY"/>
    </LinearLayout>

</LinearLayout>