<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".InquireChild"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="@dimen/back_btn_size"
        android:layout_height="@dimen/back_btn_size"
        android:layout_margin="@dimen/margin_s"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/btn_back" />

    <ImageView
        android:layout_gravity="center"
        android:layout_width="@dimen/ic_header_width"
        android:layout_height="@dimen/ic_header_height"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/margin_l"
        android:src="@drawable/inquire_child_header"/>

    <View
        android:layout_marginTop="@dimen/margin_s"
        android:layout_gravity="center"
        android:layout_width="@dimen/view_width_s"
        android:layout_height="@dimen/view_height"
        android:background="@color/purple" />

    <LinearLayout
        android:layout_marginTop="@dimen/margin"
        android:background="@drawable/btn_border_purple"
        android:padding="@dimen/padding_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ListView
            android:id="@+id/student_info"
            android:layout_gravity="center"
            android:layout_width="@dimen/ic_list_width"
            android:layout_height="@dimen/ic_list_height"/>
    </LinearLayout>

    <View
        android:layout_marginTop="@dimen/margin"
        android:layout_gravity="center"
        android:layout_width="@dimen/view_width_s"
        android:layout_height="@dimen/view_height"
        android:background="@color/purple" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/ic_img1_width"
                android:layout_height="@dimen/ic_img1_height"
                android:scaleType="fitXY"
                android:src="@drawable/child_img_down1"/>

            <ImageView
                android:layout_width="@dimen/ic_img2_width"
                android:layout_height="@dimen/ic_img2_height"
                android:scaleType="fitXY"
                android:src="@drawable/child_img_down2"/>

        </LinearLayout>



</LinearLayout>