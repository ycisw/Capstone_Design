<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <TextView

            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:layout_width="225dp"
            android:layout_height="50dp"
            android:gravity="left"
            android:text="menu"
            android:textSize="45sp" />
        <View
            android:layout_marginTop="3dp"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="2pt"
            android:background="@color/theme1" />




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="435dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/main_page_student_management_link"
            android:layout_width="300dp"
            android:layout_height="125dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/main_btn"
            android:drawableRight="@drawable/main_btn_1"
            android:drawablePadding="30dp"
            android:padding="10dp"
            android:text="학생 조회"
            android:textColor="@color/theme1"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/main_page_attendance_link"
            android:layout_width="300dp"
            android:layout_height="125dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/main_btn"
            android:drawableRight="@drawable/main_btn_2"
            android:drawablePadding="30dp"
            android:padding="10dp"
            android:text="출결 관리"
            android:textColor="@color/theme1"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="300dp"
            android:layout_height="125dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/main_btn"
            android:drawableRight="@drawable/main_btn_3"
            android:drawablePadding="30dp"
            android:padding="10dp"
            android:text="과제 관리"
            android:textColor="@color/theme1"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_gravity="left"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/homepage_img4" />


        <ImageView

            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="right"
            android:scaleType="fitXY"
            android:src="@drawable/homepage_img5" />

        <View
            android:layout_marginTop="3dp"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="2pt"
            android:background="@color/theme1" />


    </LinearLayout>

</LinearLayout>
