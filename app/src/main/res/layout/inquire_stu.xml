<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".InquireStu">
    <ImageButton
        android:id="@+id/back1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/btn_back" />

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:scaleType="fitXY"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/require_stu_header" />

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/btn_border_purple"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:orientation="vertical">

        <TableLayout
            android:layout_margin="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000">
            <TableRow
                android:layout_gravity="center"
                android:background="#00000000"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/white"
                    android:padding="5dp"
                    android:backgroundTint="#434C7E"
                    android:background="@drawable/inquire_stu_btn_student_name"
                    android:layout_margin="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/good"
                    android:layout_gravity="center"
                    android:text="학생이름"
                    android:textSize="20dp"/>
                <TextView
                    android:backgroundTint="#C84866"
                    android:textColor="@color/white"
                    android:padding="5dp"
                    android:background="@drawable/inquire_stu_btn_parent_name"
                    android:layout_margin="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/good"
                    android:text="보호자 성함"
                    android:textSize="20dp"/>
                <TextView
                    android:fontFamily="@font/good"
                    android:backgroundTint="#6FA671"
                    android:textColor="@color/white"
                    android:padding="5dp"
                    android:background="@drawable/inquire_stu_btn_parent_phone"
                    android:layout_margin="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="학생 전화번호"
                    android:textSize="20dp"/>

            </TableRow>


        </TableLayout>
        <ListView
            android:divider="@color/white"
            android:layout_gravity="center"
            android:id="@+id/listView1"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:textAlignment="center">
        </ListView>

    </LinearLayout>

    <Button
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:id="@+id/student_add"
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:background="@drawable/btn_navy"
        android:textAlignment="center"
        android:text="학생추가"
        android:fontFamily="@font/good"
        android:textColor="@color/white"
        android:textSize="20dp" />

</LinearLayout>