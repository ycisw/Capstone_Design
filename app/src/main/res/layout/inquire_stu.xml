<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".InquireStu">

    <ImageButton
        android:id="@+id/back1"
        android:layout_width="@dimen/back_btn_size"
        android:layout_height="@dimen/back_btn_size"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/btn_back" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_m"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/is_header_width"
            android:layout_height="@dimen/is_header_height"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:src="@drawable/inquire_stu_header" />

    </LinearLayout>
    <View
        android:layout_width="@dimen/view_width_l"
        android:layout_height="@dimen/view_height"
        android:layout_marginBottom="@dimen/margin_s"
        android:layout_marginTop="@dimen/margin_m"
        android:layout_gravity="center"
        android:background="#9148C8" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/is_list_width"
        android:padding="@dimen/padding_s"
        android:background="@drawable/btn_border_purple"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="#00000000">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="#00000000"
              >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_m"
                    android:padding="@dimen/padding_s"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:backgroundTint="#434C7E"
                    android:background="@drawable/inquire_stu_btn_stu_name"
                    android:fontFamily="@font/good"
                    android:layout_gravity="center"
                    android:text="학생"
                    android:textSize="@dimen/text_size_b"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin"
                    android:padding="@dimen/padding_s"
                    android:gravity="center"
                    android:backgroundTint="#C84866"
                    android:textColor="@color/white"
                    android:background="@drawable/inquire_stu_btn_parent_name"
                    android:layout_gravity="center"
                    android:fontFamily="@font/good"
                    android:text="보호자"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin"
                    android:padding="@dimen/padding_s"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:fontFamily="@font/good"
                    android:backgroundTint="#6FA671"
                    android:textColor="@color/white"
                    android:background="@drawable/inquire_stu_btn_parent_phone"
                    android:layout_gravity="center"
                    android:text="보호자 전화번호"
                 />

            </TableRow>


        </TableLayout>

        <View
            android:layout_width="@dimen/view_width_l"
            android:layout_height="@dimen/view_height"
            android:layout_marginBottom="@dimen/margin_m"
            android:layout_marginTop="@dimen/margin"
            android:layout_gravity="center"
            android:background="#9148C8" />
        <ListView
            android:layout_width="@dimen/is_list_width"
            android:layout_height="wrap_content"
            android:divider="@color/white"
            android:layout_gravity="center"
            android:id="@+id/listView1"
            android:textAlignment="center">
        </ListView>

    </LinearLayout>
    <View
        android:layout_width="@dimen/view_width_l"
        android:layout_height="@dimen/view_height"
        android:layout_marginBottom="@dimen/margin_m"
        android:layout_marginTop="@dimen/margin_s"
        android:layout_gravity="center"
        android:background="#9148C8" />

    <Button
        android:layout_width="@dimen/is_btn_width"
        android:layout_height="@dimen/is_btn_height"
        android:layout_margin="@dimen/margin_m"
        android:textSize="@dimen/text_size_b"
        android:backgroundTint="#9148C8"
        android:layout_gravity="center"
        android:id="@+id/student_add"
        android:background="@drawable/btn_navy"
        android:textAlignment="center"
        android:text="학생추가"
        android:fontFamily="@font/good"
        android:textColor="@color/white"
       />

</LinearLayout>