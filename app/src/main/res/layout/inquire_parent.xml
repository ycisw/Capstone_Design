<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".InquireParent">

    <ImageButton
        android:id="@+id/back5"
        android:layout_width="@dimen/back_btn_size"
        android:layout_height="@dimen/back_btn_size"
        android:layout_gravity="left"
        android:layout_margin="@dimen/margin_s"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/btn_back" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="@dimen/ip_header_width"
            android:layout_height="@dimen/ip_header_height"
            android:layout_marginRight="@dimen/margin_m"
            android:scaleType="fitXY"
            android:src="@drawable/inquire_parent_header" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    </LinearLayout>

    <View
        android:layout_width="@dimen/view_width_s"
        android:layout_height="@dimen/view_height"
        android:layout_marginTop="@dimen/margin_b"
        android:layout_marginBottom="@dimen/margin_s"
        android:layout_gravity="center"
        android:background="#002060" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_s"
        android:layout_gravity="center"
        android:background="@drawable/btn_border_navy"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_m"
            android:layout_gravity="center"
            >

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="@dimen/ip_text_width"
                android:layout_height="wrap_content"
                android:hint="학생 이름을 입력해주세요"
                android:textColorHint="#3F51B5">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/search_parent"
                    android:layout_width="@dimen/ip_text_width"
                    android:layout_height="@dimen/ip_text_height"
                    android:fontFamily="@font/imcresoojin"
                    android:inputType="textWebEditText"
                    android:layout_gravity="center" />

            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:layout_width="@dimen/ip_btn_width"
                android:layout_height="@dimen/ip_btn_height"
                android:layout_margin="@dimen/margin"
                android:fontFamily="@font/good"
                android:id="@+id/search_btn"
                android:layout_gravity="center"
                android:background="@drawable/btn_navy"
                android:text="조회"
                android:textColor="@color/white" />
        </LinearLayout>


        <ScrollView
            android:layout_width="@dimen/ip_list_width"
            android:layout_height="@dimen/ip_list_height"
            android:layout_marginTop="@dimen/margin_b"
            android:layout_marginBottom="@dimen/margin_s"
            android:layout_gravity="center"
           >

            <LinearLayout
                android:layout_width="@dimen/ip_list_width"
                android:layout_height="@dimen/ip_list_height"
                android:orientation="horizontal">

                <ListView
                    android:id="@+id/listView2"
                    android:layout_width="@dimen/ip_list_width"
                    android:layout_height="@dimen/ip_list_height" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <View
        android:layout_width="@dimen/view_width_s"
        android:layout_height="@dimen/view_height"
        android:layout_marginTop="@dimen/margin_s"
        android:layout_marginBottom="@dimen/margin_s"
        android:layout_gravity="center"
        android:background="#002060" />

</LinearLayout>