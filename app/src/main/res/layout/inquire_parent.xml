<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    tools:context=".InquireParent">

    <ImageButton
        android:id="@+id/back5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="left"
        android:layout_margin="5dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/btn_back" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="65dp"
            android:src="@drawable/search_parent_header" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    </LinearLayout>

    <View
        android:layout_width="350dp"
        android:layout_height="5dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:background="#002060" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/main_btn"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:hint="학생 이름을 입력해주세요"
                android:textColorHint="#3F51B5">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/search_parent"
                    android:layout_width="240dp"
                    android:fontFamily="@font/imcresoojin"
                    android:layout_height="45dp"
                    android:inputType="textWebEditText"
                    android:layout_gravity="center" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:fontFamily="@font/good"
                android:id="@+id/search_btn"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/start_page_btn"
                android:text="조회"
                android:textColor="@color/white" />
        </LinearLayout>


        <ScrollView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="380dp"
                android:orientation="horizontal">

                <ListView
                    android:id="@+id/listView2"
                    android:layout_width="350dp"
                    android:layout_height="380dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <View
        android:layout_width="350dp"
        android:layout_height="5dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:background="#002060" />

</LinearLayout>