<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".StuAt">

    <ImageButton
        android:layout_margin="5dp"
        android:id="@+id/back_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/back_btn" />

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:text="학생 출석기록"
            android:fontFamily="@font/imcresoojin"
            android:textAlignment="center"
            android:textColor="#002060"
            android:id="@+id/student_name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="30dp" />


    </LinearLayout>
    <View
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:layout_width="330dp"
        android:layout_height="2pt"
        android:background="#002060" />




    <ScrollView

        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="380dp">

        <LinearLayout
            android:background="@drawable/stu_at_item_layout"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ListView
                android:dividerHeight="0dp"
                android:divider="#FFFFFF"
                android:id="@+id/attendacne_data"
                android:layout_width="310dp"
                android:layout_height="380dp" />

        </LinearLayout>

    </ScrollView>

    <ImageView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:layout_width="280dp"
        android:layout_height="110dp"
        android:src="@drawable/attendancecheck_img1"
        android:scaleType="fitXY"/>
    <View
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_width="33dp"
        android:layout_height="2pt"
        android:background="#002060" />
</LinearLayout>