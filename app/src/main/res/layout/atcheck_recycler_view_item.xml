<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/attendance_check_recyclerview_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginVertical="5dp"
    android:background="@drawable/stu_at_item_layout"
    android:orientation="horizontal">


    <TextView
        android:textColorHint="@color/navy"
        android:textColor="@color/navy"
        android:maxLength="3"
        android:fontFamily="@font/good"
        android:layout_gravity="center"
        android:hint="이름"
        android:ellipsize="end"
        android:id="@+id/attendance_check_student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_weight="1" />




    <CheckBox
        android:layout_gravity="right"
        android:id="@+id/attendance_check_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>
