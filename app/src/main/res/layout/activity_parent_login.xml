<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/parents_log"

    android:orientation="vertical"
    tools:context=".ParentLoginActivity">
    <TextView
        android:textColor="#99000000"
        android:fontFamily="@font/good"
        android:textSize="70dp"
        android:layout_margin="45dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Parents Login"
        />

    <LinearLayout
        android:layout_marginTop="90dp"
        android:layout_width="match_parent"
        android:layout_height="309dp"
        android:gravity="bottom"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="300dp"
                android:layout_height="60dp"
                android:background = "@null"
                android:layout_margin="10dp"
                android:textColorHint="@color/white"
                android:hint="학생 이름 ">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/parent_login_parent_phone"
                    android:layout_width="300dp"
                    android:background="#33000000"
                    android:layout_height="60dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="300dp"
                android:textColorHint="@color/white"
                android:layout_height="60dp"
                android:hint="학생 전화번호">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/parent_login_student_phone"
                    android:background="#33000000"
                    android:layout_width="300dp"
                    android:layout_height="60dp" />
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/parent_login_login_button"
                android:layout_width="139dp"
                android:layout_height="63dp"
                android:background="@drawable/button_round"
                android:backgroundTint="#33000000"
                android:drawableLeft="@drawable/person"
                android:text="Login"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
