<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".TeacherLogin">

    <ImageButton
        android:layout_gravity="left"
        android:id="@+id/back_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/btn_back" />

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:fontFamily="@font/good"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:text="menu"
            android:textSize="35sp" />
        <View
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="2pt"
            android:background="#002060" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/main_page_student_management_link"
            android:layout_width="290dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:fontFamily="@font/good"
            android:background="@drawable/btn_border_navy"
            android:drawableRight="@drawable/main_btn_1"
            android:padding="10dp"
            android:text="학생 조회"
            android:textColor="#002060"
            android:textSize="25sp" />

        <Button
            android:fontFamily="@font/good"
            android:id="@+id/main_page_attendance_link"
            android:layout_width="290dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/btn_border_navy"
            android:drawableRight="@drawable/main_btn_2"
            android:padding="10dp"
            android:text="출결 관리"
            android:textColor="#002060"
            android:textSize="25sp" />

        <Button
            android:fontFamily="@font/good"
            android:id="@+id/main_page_search_parent_link"
            android:layout_width="290dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/btn_border_navy"
            android:drawableRight="@drawable/main_btn_3"
            android:padding="10dp"
            android:text="학부모 검색"
            android:textColor="#002060"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:gravity="bottom"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:layout_marginBottom="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/homepage_img_down" />

        <View
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="2pt"
            android:layout_marginBottom="20dp"
            android:background="#002060" />


    </LinearLayout>

</LinearLayout>
