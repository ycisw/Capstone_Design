<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageButton
        android:id="@+id/back4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/btn_back" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"

            android:src="@drawable/upd_stu_dialog_header" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_border_purple"
        android:orientation="vertical"
        android:padding="6dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:hint="학생 이름"
            android:textColorHint="#3F51B5">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/update_sname"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/imcresoojin"
                android:inputType="textWebPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:hint="학생 전화번호"
            android:textColorHint="#3F51B5">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/update_sphone"
                android:layout_width="240dp"
                android:inputType="phone"
                android:layout_height="wrap_content"
                android:fontFamily="@font/imcresoojin" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:hint="학부모 성함"
            android:textColorHint="#3F51B5">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/update_pname"
                android:layout_width="240dp"
                android:inputType="textWebEditText"
                android:layout_height="wrap_content"
                android:fontFamily="@font/imcresoojin" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:hint="학부모 전화번호"
            android:textColorHint="#3F51B5">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/update_pphone"
                android:layout_width="240dp"
                android:inputType="phone"
                android:layout_height="wrap_content"
                android:fontFamily="@font/imcresoojin" />
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>
    <Button
        android:id="@+id/update_student"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_navy"
        android:backgroundTint="#9148C8"
        android:fontFamily="@font/good"
        android:text="수정하기"
        android:textColor="@color/white"
        android:textSize="20dp"
         />


</LinearLayout>