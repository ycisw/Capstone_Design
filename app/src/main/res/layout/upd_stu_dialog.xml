<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/padding_b">

    <ImageButton
        android:id="@+id/back4"
        android:layout_width="@dimen/back_btn_size"
        android:layout_height="@dimen/back_btn_size"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/btn_back" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/us_header_width"
            android:layout_height="@dimen/us_header_height"
            android:scaleType="fitXY"

            android:src="@drawable/upd_stu_dialog_header" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_m"
        android:padding="@dimen/padding_s"
        android:layout_gravity="center"
        android:background="@drawable/btn_border_purple"
        android:orientation="vertical"
    >

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="@dimen/rs_list_width"
            android:layout_height="wrap_content"
            android:hint="@string/stu_name"
            android:textColorHint="@color/text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/update_sname"
                android:layout_width="@dimen/rs_list_width"
                android:layout_height="wrap_content"
                android:fontFamily="@font/imcresoojin"
                android:inputType="textWebPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="@dimen/rs_list_width"
            android:layout_height="wrap_content"
            android:hint="@string/stu_phone"
            android:textColorHint="@color/text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/update_sphone"
                android:layout_width="@dimen/rs_list_width"
                android:inputType="phone"
                android:layout_height="wrap_content"
                android:fontFamily="@font/imcresoojin" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="@dimen/rs_list_width"
            android:layout_height="wrap_content"
            android:hint="@string/par_name"
            android:textColorHint="@color/text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/update_pname"
                android:layout_width="@dimen/rs_list_width"
                android:layout_height="wrap_content"
                android:inputType="textWebEditText"
                android:fontFamily="@font/imcresoojin" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="@dimen/rs_list_width"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_m"
            android:layout_gravity="center"
            android:hint="@string/par_phone"
            android:textColorHint="@color/text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/update_pphone"
                android:layout_width="@dimen/rs_list_width"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:fontFamily="@font/imcresoojin" />
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>
    <Button
        android:id="@+id/update_student"
        android:layout_width="@dimen/us_btn_width"
        android:layout_height="@dimen/us_btn_height"
        android:layout_marginTop="@dimen/margin_m"
        android:textSize="@dimen/text_size_b"
        android:layout_gravity="center"
        android:background="@drawable/btn_effect_navy"
        android:backgroundTint="@color/purple"
        android:fontFamily="@font/good"
        android:text="@string/upd_btn_stu"
        android:textColor="@color/white"
         />


</LinearLayout>