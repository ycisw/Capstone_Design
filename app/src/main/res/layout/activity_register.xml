<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    android:orientation="vertical"
    tools:context=".RegisterActivity">


    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/back_btn" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:background="@drawable/register_header" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="아이디"
                android:textColorHint="#3F51B5">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_id"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="비밀번호"
                android:textColorHint="#3F51B5">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_password"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="비밀번호 확인"
                android:textColorHint="#3F51B5">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_confirm"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="이름"
                android:textColorHint="#3F51B5">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_name"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="200dp"
                android:layout_height="50dp"
                android:hint="핸드폰 번호"
                android:textColorHint="#3F51B5">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_phone"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#9148C8" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/register_send_validation"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:backgroundTint="#9148C8"
                android:text="인증번호 요청"
                android:textColor="@color/white"
                android:textSize="13sp"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:theme="@style/EditText"

            >

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="200dp"
                android:layout_height="50dp"
                android:hint="인증번호"
                android:textColorHint="#3F51B5">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_validation_code"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#9148C8" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/register_validation"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:backgroundTint="#9148C8"
                android:text="인증번호 확인"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/register_register_button"
                android:layout_width="320dp"
                android:layout_marginTop="15dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/start_page_btn"
                android:text="등 록"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="bottom">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/register_img2" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/register_img1" />

    </LinearLayout>

</LinearLayout>