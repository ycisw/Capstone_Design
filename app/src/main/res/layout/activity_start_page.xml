<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00E8EFE8"
    android:backgroundTint="#00E7EFDE"
    android:orientation="vertical"
    tools:context=".startPage">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="200dp"
        android:text="전자출결 시스템"
        android:textAlignment="center"
        android:textSize="50sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="411dp"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="bottom"
            android:orientation="vertical">


            <Button
                android:backgroundTint="#3F51B5"
                android:id="@+id/parents"
                android:layout_width="230dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:drawableLeft="@drawable/parents_icon"
                android:text="부모 로그인"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="23sp" />


            <Button
                android:backgroundTint="#FF9800"
                android:id="@+id/teacher"
                android:layout_width="230dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/person2"
                android:text="강사 로그인"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="23sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>