<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_b"
    android:background="@color/white"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/back3"
        android:layout_width="@dimen/back_btn_size"
        android:layout_height="@dimen/back_btn_size"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/btn_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >



        <ImageView
            android:layout_width="@dimen/rs_header_width"
            android:layout_height="@dimen/rs_header_height"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:src="@drawable/reg_stu_dialog_header" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_m"
        android:padding="@dimen/padding_s"
        android:layout_gravity="center"
        android:background="@drawable/btn_border_purple"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="@dimen/rs_list_width"
            android:layout_height="wrap_content"
            android:hint="학생 이름"
            android:textColorHint="#3F51B5">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_sname"
                android:layout_width="@dimen/rs_list_width"
                android:layout_height="wrap_content"
                android:fontFamily="@font/imcresoojin"
                android:inputType="textWebEditText"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="@dimen/rs_list_width"
            android:layout_height="wrap_content"
            android:hint="학생 전화번호"
            android:textColorHint="#3F51B5">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_sphone"
                android:layout_width="@dimen/rs_list_width"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:fontFamily="@font/imcresoojin"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="@dimen/rs_list_width"
            android:layout_height="wrap_content"
            android:hint="학부모 성함"
            android:textColorHint="#3F51B5">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_pname"
                android:layout_width="@dimen/rs_list_width"
                android:layout_height="wrap_content"
                android:fontFamily="@font/imcresoojin"
                android:inputType="textWebEditText"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="@dimen/rs_list_width"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="학부모 전화번호"
            android:textColorHint="#3F51B5">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_pphone"
                android:layout_width="@dimen/rs_list_width"
                android:layout_height="wrap_content"
                android:fontFamily="@font/imcresoojin"
                android:inputType="phone"
                />
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>
    <Button
        android:id="@+id/create_student"
        android:layout_width="@dimen/rs_btn_width"
        android:layout_height="@dimen/rs_btn_height"
        android:layout_marginTop="@dimen/margin_m"
        android:textSize="@dimen/text_size_b"
        android:backgroundTint="#9148C8"
        android:background="@drawable/btn_navy"
        android:layout_gravity="center"
        android:text="등록하기"
        android:fontFamily="@font/good"
        android:textColor="#FFFFFFFF"
     />

</LinearLayout>