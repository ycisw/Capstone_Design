<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/back3"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/btn_back" />

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="71dp"
        android:orientation="horizontal"
        android:gravity="center"
        >



        <ImageView
            android:layout_width="235dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:layout_marginBottom="0dp"
            android:src="@drawable/reg_stu_dialog_header" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/btn_border_purple"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="학생 이름"
            android:textColorHint="#3F51B5">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_gravity="center"
                android:id="@+id/add_sname"
                android:layout_width="300dp"
                android:fontFamily="@font/imcresoojin"
                android:inputType="textWebEditText"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="학생 전화번호"
            android:textColorHint="#3F51B5">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_sphone"
                android:layout_width="300dp"
                android:inputType="phone"
                android:fontFamily="@font/imcresoojin"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="학부모 성함"
            android:textColorHint="#3F51B5">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_pname"
                android:layout_width="300dp"
                android:fontFamily="@font/imcresoojin"
                android:inputType="textWebEditText"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="학부모 전화번호"
            android:textColorHint="#3F51B5">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_gravity="center"
                android:id="@+id/add_pphone"
                android:layout_width="300dp"
                android:fontFamily="@font/imcresoojin"
                android:inputType="phone"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:backgroundTint="#9148C8"
            android:id="@+id/create_student"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_navy"
            android:layout_gravity="center"
            android:text="등록하기"
            android:fontFamily="@font/good"
            android:textColor="#FFFFFFFF"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>