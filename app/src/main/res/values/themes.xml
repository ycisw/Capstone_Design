<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CapstoneDesign" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CapstoneDesign.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="EditText" parent="Widget.Design.TextInputLayout"> // important : parent 를 이것으로.

        <item name="colorControlNormal">#9148C8</item>  // unFocus 상태일때 밑줄 색.
        <item name="boxStrokeColor">#E696FF</item> // Focus 상태일때 밑줄 색.
        <item name="android:textCursorDrawable">@color/black</item>  // cursor 색.

        <item name="android:textColorHint">@color/theme1</item>  // hint 색
        <item name="hintTextColor">@color/theme1</item>   // floating hint 색

    </style>



    <style name="Theme.CapstoneDesign.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.CapstoneDesign.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>